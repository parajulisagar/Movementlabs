{
    "compilerOptions": {
      "target": "es2016",                                  
      "lib": ["es6"],  
      "types": ["node", "mocha"],                                 
      "module": "commonjs",  
      "moduleResolution": "node",                        
      "resolveJsonModule": true,                          
      "allowJs": true,                                    
      "outDir": "dist",     
      "esModuleInterop": true,                           
      "skipLibCheck": true,
      "declaration": true                             
    },
  "include": ["src","test"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "test/**/*",
  ]
}
  